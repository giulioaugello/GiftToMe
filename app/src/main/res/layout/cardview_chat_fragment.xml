<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/card_chat"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_margin="10dp"
    android:backgroundTint="@color/colorPrimary"
    app:cardElevation="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_margin="7dp"
        android:padding="5dp"
        android:background="@drawable/inside_card_chat">

        <ImageView
            android:id="@+id/image_twitter"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0"
            android:layout_marginStart="6dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/user_name_gift"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nome Utente"
                android:textSize="22sp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/image_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_card_giftcard_24"/>

                <TextView
                    android:id="@+id/name_gift"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nome Regalo"
                    android:textSize="20sp"
                    android:layout_marginStart="3dp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>