<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/bottom_sheet_users_gift"
    android:paddingTop="25dp"
    android:paddingEnd="10dp"
    android:paddingStart="10dp"
    android:paddingBottom="10dp"
    android:id="@+id/linear_user_gift">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/name_user_gift"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textColor="@color/textWhite"
            android:layout_gravity="bottom"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"/>


        <ImageView
            android:id="@+id/category_user_gift"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="0"/>

    </LinearLayout>

    <TextView
        android:id="@+id/description_user_gift"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColor="@color/textWhite"
        android:layout_marginTop="12dp"/>

    <TextView
        android:id="@+id/address_user_gift"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColor="@color/textWhite"
        android:layout_marginTop="12dp"/>

    <Button
        android:id="@+id/contact_user_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/textWhite"
        android:textSize="20sp"
        android:background="@drawable/button_addgift"
        android:drawableEnd="@drawable/ic_baseline_textsms_24"
        android:drawablePadding="10dp"
        android:drawableTint="@color/textWhite"
        android:padding="10dp"
        android:gravity="start|center"
        android:layout_gravity="end"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="10dp"/>


</LinearLayout>